class Producto {
  - id : Long
  - nombre : String
  - descripcion : String
  - precio : Double
  - stock : Integer
  - imagenUrl : String
}

class Categoria {
  - id : Long
  - nombre : String
  - descripcion : String
}

class Venta {
  - id : Long
  - fecha : Date
  - estado : String
  - total : Double
}

class DetalleVenta {
  - id : Long
  - cantidad : Integer
  - precioUnitario : Double
}

class Comentario {
  - id : Long
  - contenido : String
  - fecha : Date
}

class Favorito {
  - id : Long
